# SMTP - inbound from internet (port 25)
# Add original recipient header for content filter
smtp      inet  n       -       y       -       -       smtpd
  -o content_filter=maillist-rewriter:dummy

# Submission - authenticated sending (port 587)
# Modified to allow relay from trusted mynetworks without TLS/AUTH
# (GCP blocks outbound port 25, so GKE pods must use 587)
# Add original recipient header for content filter
submission inet n       -       y       -       -       smtpd
  -o syslog_name=postfix/submission
  -o smtpd_tls_security_level=may
  -o smtpd_sasl_auth_enable=yes
  -o smtpd_tls_auth_only=no
  -o smtpd_reject_unlisted_recipient=no
  -o smtpd_client_restrictions=permit_mynetworks,permit_sasl_authenticated,reject
  -o smtpd_helo_restrictions=
  -o smtpd_sender_restrictions=
  -o smtpd_recipient_restrictions=permit_mynetworks,permit_sasl_authenticated,reject
  -o smtpd_relay_restrictions=permit_mynetworks,permit_sasl_authenticated,reject
  -o milter_macro_daemon_name=ORIGINATING
  -o content_filter=maillist-rewriter:dummy

# Pickup service
pickup    unix  n       -       y       60      1       pickup

# Cleanup service
cleanup   unix  n       -       y       -       0       cleanup

# Queue manager
qmgr      unix  n       -       n       300     1       qmgr

# Transport layer delivery agent
tlsmgr    unix  -       -       y       1000?   1       tlsmgr

# Rewrite service
rewrite   unix  -       -       y       -       -       trivial-rewrite

# Bounce notifications
bounce    unix  -       -       y       -       0       bounce
defer     unix  -       -       y       -       0       bounce
trace     unix  -       -       y       -       0       bounce

# Verification
verify    unix  -       -       y       -       1       verify

# Flush queue
flush     unix  n       -       y       1000?   0       flush

# Proxy map service
proxymap  unix  -       -       n       -       -       proxymap
proxywrite unix -       -       n       -       1       proxymap

# SMTP client for outbound
smtp      unix  -       -       y       -       -       smtp
relay     unix  -       -       y       -       -       smtp
  -o syslog_name=postfix/$service_name

# Error handler
showq     unix  n       -       y       -       -       showq
error     unix  -       -       y       -       -       error
retry     unix  -       -       y       -       -       error
discard   unix  -       -       y       -       -       discard

# Local delivery
local     unix  -       n       n       -       -       local
virtual   unix  -       n       n       -       -       virtual
lmtp      unix  -       -       y       -       -       lmtp
anvil     unix  -       -       y       -       1       anvil
scache    unix  -       -       y       -       1       scache
postlog   unix-dgram n  -       n       -       1       postlogd

# ============================================================
# MAILING LIST HEADER REWRITER (Content Filter)
# ============================================================
# Rewrites From headers to list address and adds Reply-To
# pointing to original sender (Mailman-style)
maillist-rewriter unix  -       n       n       -       10      pipe
  flags=Rq user=nobody argv=/usr/local/bin/maillist-rewriter.py ${nexthop} ${sender} ${recipient}

# Reinjection port (after content filter)
127.0.0.1:10025 inet n  -       y       -       -       smtpd
  -o syslog_name=postfix/reinject
  -o content_filter=
  -o receive_override_options=no_header_body_checks
  -o smtpd_helo_restrictions=
  -o smtpd_client_restrictions=
  -o smtpd_sender_restrictions=
  -o smtpd_recipient_restrictions=permit_mynetworks,reject
  -o mynetworks=127.0.0.0/8
  -o smtpd_authorized_xforward_hosts=127.0.0.0/8
