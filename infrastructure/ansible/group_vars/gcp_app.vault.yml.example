# GCP App Deployment Vault Secrets
#
# ⚠️  NOTE: Canonical example is ../group_vars/gcp_app.vault.yml.example (parent directory)
#
# VAULT ARCHITECTURE: One Vault To Rule Them All
#
#   Master vault (single source of truth):
#     ../group_vars/localhost/vault.yml
#
#   This file (gcp_app/vault.yml) should be a SYMLINK:
#     cd ../group_vars/gcp_app
#     ln -sf ../localhost/vault.yml vault.yml
#
# To edit secrets, edit the MASTER vault:
#   ansible-vault edit ../group_vars/localhost/vault.yml --vault-password-file ~/.ansible_vault_pass
#
# See: ../group_vars/localhost.vault.yml.example for full documentation
#
# ⚠️  IMPORTANT: This vault is now a SYMLINK to the master vault!
#
# VAULT ARCHITECTURE: One Vault To Rule Them All
#
#   Master vault (single source of truth):
#     group_vars/localhost/vault.yml
#
#   This file (gcp_app/vault.yml) should be a SYMLINK:
#     cd group_vars/gcp_app
#     ln -sf ../localhost/vault.yml vault.yml
#
# WHY: Single source of truth prevents drift, simplifies secret management.
#
# To edit secrets, edit the MASTER vault:
#   ansible-vault edit group_vars/localhost/vault.yml --vault-password-file ~/.ansible_vault_pass
#
# DO NOT create a separate vault file here - use the symlink!

---
# ============================================================
# DJANGO SECRETS
# ============================================================

# Django secret key (required)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
vault_django_secret_key: "your-very-long-random-secret-key-here"

# ============================================================
# DATABASE PASSWORDS
# ============================================================
# IMPORTANT: Replace placeholder values before deployment!
# Common placeholder patterns (your-*, *-password, change*, etc.) should be
# detected by playbook validation. However, always use strong, unique passwords
# generated with: openssl rand -base64 32
#
# SECURITY WARNING: Deploying with weak or placeholder passwords creates
# serious vulnerabilities. The playbook will fail if it detects obvious
# placeholder patterns, but validation is not foolproof.

# For single-tenant mode:
vault_postgresql_password: "your-database-password"

# For multi-tenant mode (one per tenant):
vault_postgresql_password_ssc: "ssc-database-password"
vault_postgresql_password_masa: "masa-database-password"
# vault_postgresql_password_nfss: "nfss-database-password"

# ============================================================
# EMAIL CREDENTIALS (OPTIONAL)
# ============================================================

# SMTP authentication (if using authenticated SMTP relay)
# vault_email_host_user: "your-smtp-username"
# vault_email_host_password: "your-smtp-password"

# ============================================================
# GOOGLE OAUTH (OPTIONAL)
# ============================================================

# For single-tenant deployments:
# Only needed if using Google OAuth for user authentication
# Get these from: https://console.cloud.google.com/apis/credentials
# vault_google_oauth_client_id: "your-client-id.apps.googleusercontent.com"
# vault_google_oauth_client_secret: "your-client-secret"

# For multi-tenant deployments (one set per tenant):
# Each tenant should have its own OAuth2 project with tenant-specific redirect URIs
# Example redirect URI: https://ssc.manage2soar.com/complete/google-oauth2/
#
# SSC (Skyline Soaring Club)
# vault_google_oauth_client_id_ssc: "ssc-client-id.apps.googleusercontent.com"
# vault_google_oauth_client_secret_ssc: "ssc-client-secret"
#
# MASA (Mid-Atlantic Soaring Association)
# vault_google_oauth_client_id_masa: "masa-client-id.apps.googleusercontent.com"
# vault_google_oauth_client_secret_masa: "masa-client-secret"
#
# NFSS (Northern Florida Soaring Society)
# vault_google_oauth_client_id_nfss: "nfss-client-id.apps.googleusercontent.com"
# vault_google_oauth_client_secret_nfss: "nfss-client-secret"

# ============================================================
# ADDITIONAL SECRETS
# ============================================================

# Add any other secrets your application needs:
# vault_sentry_dsn: "https://..."
# vault_stripe_api_key: "sk_live_..."
