# Django environment configuration for local development
# Copy this file to .env and customize for your local setup

# Django settings module
# For local development, use the regular settings (GCS-enabled)
# For single-host deployment without GCS, use settings_single_host
DJANGO_SETTINGS_MODULE=manage2soar.settings
# DJANGO_SETTINGS_MODULE=manage2soar.settings_single_host

# Debug mode (ONLY enable for local development, NEVER in production)
DJANGO_DEBUG=True

# Security settings
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# SSL settings
SSL_ENABLED=false

# Database configuration (PostgreSQL)
DB_NAME=manage2soar
DB_USER=m2s
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Club prefix (used for tenant identification in multi-tenant deployments)
CLUB_PREFIX=tsc

# Timezone
DJANGO_TIMEZONE=America/New_York

# Static and media files (for single-host deployments)
# STATIC_ROOT=/var/www/m2s/static
# MEDIA_ROOT=/var/www/m2s/media

# Email configuration
# For local dev, you can use Django's console backend to print emails to terminal
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your-smtp-username
# EMAIL_HOST_PASSWORD=your-smtp-password
# DEFAULT_FROM_EMAIL=noreply@example.com

# Email dev mode - when true, redirects all emails to test address (or console if redirect not set)
# Set to false in production to deliver emails to real recipients
EMAIL_DEV_MODE=true
# EMAIL_DEV_MODE_REDIRECT_TO=your-test-email@example.com

# Google OAuth2 (optional - if not set, users can use Django username/password login)
# Get credentials from Google Cloud Console: https://console.cloud.google.com/apis/credentials
# SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-client-id.apps.googleusercontent.com
# SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-client-secret

# Google Cloud Storage (for default settings.py - not needed for settings_single_host.py)
# Get service account key from Google Cloud Console
# GCS_BUCKET_NAME=your-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Logging
DJANGO_LOG_FILE=/tmp/django.log
